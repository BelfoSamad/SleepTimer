<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- Picker Style For the Hours:Minutes:AM/PM -->
    <style name="AppTheme.TimerPicker" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:textSize">18sp</item>
        <item name="colorControlNormal">@android:color/transparent</item>
    </style>

    <!-- Picker Style For the Results -->
    <style name="AppTheme.ResultsPicker" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:textSize">32sp</item>
        <item name="colorControlNormal">@android:color/transparent</item>
    </style>

</resources>
